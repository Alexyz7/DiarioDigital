@model IEnumerable<DiarioDigital.Comentarios>


@{

    Layout = null;


}



<script>

    function funcion3() {
        var x = document.getElementById("sd");

        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }

</script>





@foreach (var item in Model)
{



    <div class="container" style="padding-top:10px; border-top: 1px solid blue">

        <div class="row" style="background-color:white; border-radius:10px">



            @Html.HiddenFor(modelItem => item.Idcoment)

            <div class="d-flex" style="color:cornflowerblue; font-weight:bold">
                <div class="p-2 flex-grow-1"><span style="text-decoration:underline"> @Html.DisplayFor(modelItem => item.Usuarios.Nombre)</span>   </div> <div class="p-2" style="color:lightgray">Respondido @item.DateComent</div>
            </div>
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0 align-self-start"> <img src="~/Content/Imagenes/user1.jpg" width="61" height="61"></div>
                <div class="flex-grow-1 ms-3" style="background-color:white">@Html.DisplayFor(modelItem => item.comentario) </div>
            </div>



            @if (User.Identity.IsAuthenticated)

            {

                DiarioOnlineEntities db = new DiarioOnlineEntities();
                var useractual = db.Usuarios.FirstOrDefault(x => x.Email == System.Web.HttpContext.Current.User.Identity.Name).Nombre;
        <div class="d-flex flex-row-reverse">

            @if (useractual == item.Usuarios.Nombre)
            {

                <div class="p-2">  @Html.Action("BorrarComent", "Comentarios", new { id = item.Idcoment })  </div>

                <div class="p-2"> <i class="bi bi-pencil" style="font-size:20px; cursor:pointer" onclick="funcion3()"></i>  </div>



                <div id="sd" class="col-md-12" style="display:none">@Html.Action("Edit", "Comentarios", new { id = item.Idcoment })</div>

                <i class="bi bi-reply tocar p-2" style="font-size:20px; cursor:pointer; display:block"></i>

                <div class="vt col-md-12" style="display:none">
                    @Html.Action("subcoment", "Comentarios", new { id = item.Idcoment })
                </div>
            }



        </div>

            }


        </div>
    </div>



}





















